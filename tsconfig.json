{
	"compilerOptions":
	{
		"composite": true,
		"declaration": true,
		"sourceMap": true,
		"declarationMap": true,
		"strictNullChecks": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"experimentalDecorators": true,
		"preserveConstEnums": false,
        "noEmitOnError": true,
        "module": "ESNext",
        "moduleResolution": "node",
		"target": "ES2017",
		"lib": [ "ES2017", "dom" ],
		"rootDir": "src",
		"outDir": "./lib"
	},

	"include": [
		"src/**/*"
	]
}